@model ContatoModel
@{
    ViewData["Title"] = "Confirmar Exclusão de Contatos";
}
<div class="text-center">
    <h1 class="display-4" style="text-align:center;margin-bottom:29px">Confirma a exclusão do contato @Model.Nome ?</h1>
</div>
<a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" style="width:50%">Confirmar</a>
<a class="btn btn-danger" asp-controller="Contato" asp-action="Index" role="button" style="width:48%">Cancelar</a>