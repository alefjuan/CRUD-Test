@model ContatoModel
@{
    ViewData["Title"] = "Edição de Contatos";
}
<div>
    <h1 class="display-4" style="text-align:center">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>

    <div class="form-group" style="margin-bottom:20px;">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
    </div>

    <div class="form-group" style="margin-bottom:20px;">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email">
    </div>

    <div class="form-group" style="margin-bottom:20px;">
        <label for="celular">Número de Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o número de contato">
    </div>

    
    <button type="submit" class="btn btn-primary" style="width:48%">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button" style="width:50%">Voltar</a>
    
</form>